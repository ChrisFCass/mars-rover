{
  "name": "mars-rover",
  "version": "1.0.0",
  "description": "simulate a rover movement provided by an instructions file.",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config index.js",
    "test": "jest",
    "test:cov": "jest --collectCoverage -i --detectOpenHandles"
  },
  "author": "christian fuentes cassorla",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "split": "^1.0.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest/globals": true,
      "browser": true
    },
    "extends": [
      "airbnb",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ]
  },
  "eslintIgnore": [
    "build",
    "dist",
    "node_modules"
  ],
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true
  }
}
